@{
    ViewBag.Title = "Contact Page";
}

<!DOCTYPE html>
<body class="striped-background">
    <h2 style="text-align: left">Contact Form</h2>
    <form class="form-horizontal" style="float: left">
        <div class="form-group">
            <label class="col-md-2 control-label">Name</label>
            <div class="col-md-10">
                <input type="text" name="name" id="name" class="form-control" placeholder="Full name"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Email</label>
            <div class="col-md-10">
                <input type="text" name="email" id="email" class="form-control" placeholder="sample@site.com" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Content</label>
            <div class="col-md-10">
                <textarea name="text" placeholder="Write something to us"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Send" />
            </div>
        </div>
    </form>
    <p style="float: right; padding-right: 60%">
        <a href="https://bg-bg.facebook.com/PokemonGO/" target="_blank">
            <img src="~/background/facebook.png" />
        </a>
        <br />
        <a href="https://twitter.com/pokemongonews" target="_blank">
            <img src="~/background/twitter.png" />
        </a>
        <br />
        <a href="https://www.youtube.com/channel/UCFctpiB_Hnlk3ejWfHqSm6Q" target="_blank">
            <img src="~/background/youtube.png" />
        </a>
    </p>
</body>