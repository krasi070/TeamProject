@model WebApp.Models.Pokemon

@{
    ViewBag.Title = "Details";
}

<body class="striped-background">
    <div class="pokemon-details">
        <div class="col-md-5">
            @{
                var base64 = Convert.ToBase64String(Model.Image);
                var imageSrc = string.Format("data:image/gif;base64,{0}", base64);
            }

            <img src="@imageSrc" scale="0" width="400" height="400" class="pokemon-detail-image"/>
        </div>
        <div class="col-md-5 pokemon-detail-text">
            <hr />

            @Html.DisplayNameFor(model => model.Name)

            @Html.DisplayFor(model => model.Name)

            <hr />

            @Html.DisplayNameFor(model => model.MainType)

            @Html.DisplayFor(model => model.MainType)

            <hr />

            @Html.DisplayNameFor(model => model.SecondaryType)

            @Html.DisplayFor(model => model.SecondaryType)

            <hr />

            @Html.DisplayNameFor(model => model.Description)

            @Html.DisplayFor(model => model.Description)

            <hr />
        </div>
    </div>
    <div>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>